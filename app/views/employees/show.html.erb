<h1>Employee Information</h1>

<table border="1">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Total Sales</th>
    <th>Products Most Sold</th>
  </tr>
  <tr>
    <td><%= @employee.first_name %></td>
    <td><%= @employee.last_name %></td>
    <td><%= mail_to @employee.email, @employee.email %></td>
    <td><%= number_to_currency(@total_sales) %> </td>
    <td><%= @product_count %></td>
  </tr>


</table>


<h1>Sales Information</h1>
<table border="1">
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Invoice Number</th>
      <th>Units Sold</th>
      <!-- More attributes here... -->
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.sale_date %></td>
        <td><%= number_to_currency(sale.sale_amount) %></td>
        <td><%= sale.invoices[0].invoice_number %></td>
        <td><%= sale.units_sold %></td>
        <!-- More attributes here... -->
      </tr>
    <% end %>
  </tbody>
</table>
